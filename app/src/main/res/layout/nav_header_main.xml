<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    android:id="@+id/header_drawer">

    <!-- android:background="@drawable/side_nav_bar"-->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/headerPicture"
        tools:background="@drawable/new_york"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView android:layout_width="70dp" android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing" android:id="@+id/profilePicture" tools:background="@drawable/butown_new_york"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="12dp"
        android:layout_above="@+id/nav_identifiant" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        tools:text="Benjamin Butown"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nav_identifiant"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/nav_town"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        tools:text="New York" android:id="@+id/nav_town"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nav_identifiant"
        android:layout_alignStart="@+id/nav_identifiant"
        android:layout_alignBottom="@+id/headerPicture"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
